{
    "$schema": "http://json-schema.org/schema",
    "version": 2,
    "title": "BlobUploadDirectory executor",
    "description": "Upload a directory to a blob-container",
    "type": "object",
    "properties": {
        "directory": {
            "type": "string",
            "default": "dist/{projectRoot}"
        },
        "include": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": ["**/*"]
        },
        "exclude": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "braceExpansion": {
            "type": "boolean",
            "default": true
        },
        "includeDotFiles": {
            "type": "boolean",
            "default": false
        },
        "blobStorageAccountConnectionString": {
            "type": "string"
        },
        "storageAccount": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "contentTypes": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            },
            "default": {}
        }
    },
    "required": ["containerName"]
}
