{
    "name": "laravel-microsoft-graph-mailer",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "tags": ["lang:php", "composer"],
    "namedInputs": {
        "default": ["{projectRoot}", "!{projectRoot}/vendor"],
        "tests": ["{projectRoot}/tests/**/*"],
        "production": ["default", "!tests"],
        "composer": ["{projectRoot}/composer.json"]
    },
    "sourceRoot": "packages/php/laravel-microsoft-graph-mailer/src",
    "targets": {
        "build": {
            "executor": "@shrd/nx-php:archive",
            "cache": true,
            "options": {
                "outputFile": "dist/composer-archives/laravel-microsoft-graph-mailer.zip"
            },
            "inputs": ["default"],
            "dependsOn": [],
            "outputs": ["{options.outputFile}"]
        },
        "lint": {
            "executor": "@shrd/nx-php:lint",
            "cache": true,
            "options": {
                "patterns": [
                    "packages/php/laravel-microsoft-graph-mailer/src/**/*.ts"
                ]
            },
            "dependsOn": [],
            "inputs": ["{projectRoot}/src/**/*.ts"],
            "outputs": []
        },
        "feature-test": {
            "executor": "@shrd/nx-php:phpunit",
            "cache": true,
            "options": {
                "configurationFile": "packages/php/laravel-microsoft-graph-mailer/phpunit.xml",
                "bootstrap": "vendor/autoload.php",
                "testsuites": ["Feature"]
            },
            "dependsOn": [],
            "inputs": ["default", "^production"]
        },
        "test": {
            "executor": "@shrd/nx-php:phpunit",
            "options": {
                "configurationFile": "packages/php/laravel-microsoft-graph-mailer/phpunit.xml",
                "bootstrap": "vendor/autoload.php",
                "testsuites": ["Unit"],
                "colors": "always"
            },
            "configurations": {
                "default": {
                    "display": {
                        "deprecations": true,
                        "notices": true,
                        "warnings": true,
                        "errors": true
                    },
                    "cacheResult": true,
                    "orderBy": "defects"
                },
                "ci": {
                    "noProgress": true,
                    "doNotCacheResult": true,
                    "orderBy": "random"
                }
            },
            "defaultConfiguration": "default",
            "dependsOn": [],
            "inputs": ["default", "^production"],
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"]
        },
        "typecheck": {
            "executor": "@shrd/nx-php:psalm",
            "cache": true,
            "options": {
                "cmd": "./vendor/bin/psalm.phar",
                "config": "packages/php/laravel-microsoft-graph-mailer/psalm.xml"
            },
            "configurations": {
                "default": {
                    "showInfo": true,
                    "ignoreBaseline": true
                },
                "ci": {
                    "longProgress": true
                }
            },
            "defaultConfiguration": "default",
            "inputs": ["default", "^production"],
            "outputs": ["{workspaceRoot}/.psalm/cache/{projectRoot}"],
            "dependsOn": []
        }
    }
}
